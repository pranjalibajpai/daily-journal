<%- include('partials/header'); -%>

<br />
<div class = "outer-box">
  <h1 class="text-center">Compose</h1>
</div>

<form
  class="text-center border border-light p-5"
  action="/compose"
  method="post"
>
  <div class="form-group">
    <h4><label>Title</label></h4>
    <input
      class="form-control mb-4"
      type="text"
      placeholder="Enter title for your post"
      name="postTitle"
    />
  </div>

  <div class="form-group">
    <h4><label>Content</label></h4>
    <textarea
      class="form-control rounded-0"
      rows="6"
      placeholder="Enter content for your post"
      name="postContent"
    ></textarea>
  </div>
  <button class="btn btn-danger" type="submit" name="button">Publish</button>
</form>

<%- include('partials/footer'); -%>
